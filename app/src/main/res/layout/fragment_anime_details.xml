<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_anime_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AnimeDetailsFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/animePoster"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/engTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="English Title"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/japTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Japanese Title"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(2024)" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>